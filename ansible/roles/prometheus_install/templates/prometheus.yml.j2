
global:
  scrape_interval:     15s 
  evaluation_interval: 15s 

alerting:
  alertmanagers:
  - static_configs:
    - targets: ['localhost:9093']

rule_files:

scrape_configs:
  - job_name: 'prometheus'

    scrape_interval: 5s
    scrape_timeout: 5s

    static_configs:
      - targets: ['localhost:9090']

  - job_name: node

    scrape_interval: 5s
    scrape_timeout: 5s

    static_configs:
      - targets: ['localhost:9100','grafana:9100','kibana:9100','elasticsearch:9100','web-1:9100','web-2:9100','web-3:9100','admin:9100']
                                   
  - job_name: nginx

    scrape_interval: 5s
    scrape_timeout: 5s

    static_configs:
      - targets: ['web-1:4040','web-2:4040','web-3:4040']
